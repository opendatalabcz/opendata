<?xml version="1.0" encoding="UTF-8"?>
<Configuration>
    <Appenders>
        <RollingFile name="FILE" fileName="${log.location}/opendata.log"
                     filePattern="${log.location}/opendata-%d{yyyy-MM-dd}.log.gz">
            <PatternLayout pattern="%t %-5p %c{2} - %m%n"/>
            <Policies>
                <TimeBasedTriggeringPolicy />
            </Policies>
        </RollingFile>
        <Console name="STDOUT" target="SYSTEM_OUT">
            <PatternLayout pattern="%d %-5p [%t] %C{2} (%F:%L) - %m%n"/>
        </Console>

        <Routing name="TRANSFORM">
            <Routes pattern="$${ctx:TIMESTAMP}">
                <Route>
                    <File name="transformFile" fileName="${log.location}/transform/transform-${ctx:TIMESTAMP}.log">
                        <PatternLayout>
                            <Pattern>%d %p %c{1.} [%t] %m%n</Pattern>
                        </PatternLayout>
                    </File>
                </Route>
            </Routes>
        </Routing>
    </Appenders>
    <Loggers>
        <Logger name="transform" level="debug">
            <AppenderRef ref="TRANSFORM"/>
        </Logger>

        <Logger name="log4j.logger.org.hibernate.SQL" level="info"/>
        <Logger name="log4j.logger.org.hibernate.type" level="warn"/>

        <Root level="info">
            <AppenderRef ref="STDOUT"/>
            <AppenderRef ref="FILE"/>
        </Root>
    </Loggers>
</Configuration>